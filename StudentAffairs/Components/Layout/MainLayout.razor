@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="my-row">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/services">Student Services</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/events">Events & Activities</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/contact">Contact Us</NavLink>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/register">Register</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/login">Log In</NavLink>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <article class="content px-4 mt-5">
