
@page "/students"
@namespace StudentAffairs

<PageTitle>Student</PageTitle>

<h3 class="mb-4">Student View</h3>

@if (_student is not null)
{
    @if (isLoading)
    {
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    <EditForm Model="@_student" OnValidSubmit="@( async ()=> await HandleValidSubmit() )">

        <FluentValidationValidator />

        <div class="mb-3">
            <label for="name" class="form-label"> Name:</label>
            <InputText class="form-control" @bind-Value="@_student.Name" placeholder="Enter your name" />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <InputText type="email" class="form-control" @bind-Value="@_student.Email" placeholder="Enter your email" />
        </div>

        <div class="mb-3">
            <label for="mobile" class="form-label">Mobile:</label>
            <InputText class="form-control" @bind-Value="@_student.Mobile" placeholder="Enter your mobile" />
        </div>

        <div class="mb-3">
            <label class="form-label">Age:</label>
            <InputNumber class="form-control" @bind-Value="@_student.Age"/>
        </div>

        <div class="mb-3">
            <label class="form-label">GPA:</label>
            <InputNumber class="form-control" @bind-Value="@_student.GPA" />
        </div>

        <ValidationSummary />
        <div class="mt-4 d-flex justify-content-between" style="max-width: 150px">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-dark">Reset</button>
        </div>
    </EditForm>
}

<h3 class="mt-5">Registered Students</h3>
<div class="container mt-5">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Age</th>
                <th scope="col">GPA</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody class="table-dark">
            @foreach (Student student in students ?? new())
            {
                <tr>
                    <td scope="col">@student.Name</td>
                    <td scope="col">@student.Email</td>
                    <td scope="col">@student.Mobile</td>
                    <td scope="col">@student.Age</td>
                    <td scope="col">@student.GPA</td>
                    <td scope="col">
                        <a href="javascript:void(0)" onclick="@( ()=> EditStudent(student) )" class="m-1"><i class="bi bi-pencil-fill"></i> </a>
                        <a href="javascript:void(0)" @onclick="ShowModal" class="m-1"><i class="bi bi-trash3 text-danger "></i></a>
                        <Modal @ref="modalComponent" Id="@Guid.NewGuid()" Title="Delete" Message="Are you sure ?" OnSave="()=>DeleteStudent(student)" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


